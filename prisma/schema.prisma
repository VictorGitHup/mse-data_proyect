datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  passwordHash String?
  role         Role          @default(USER)
  username     String        @unique
  avatarUrl    String?
  ageVerified  Boolean       @default(false)
  ads          Ad[]
  ratings      Rating[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Category {
  id   String @id @default(cuid())
  name String @unique
  ads  Ad[]
}

model Ad {
  id            String     @id @default(cuid())
  title         String
  description   String
  country       String
  department    String
  city          String
  active        Boolean    @default(true)
  premiumUntil  DateTime?
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  categories    Category[]
  tags          Tag[]
  ratings       Rating[]
  payments      Payment[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Tag {
  id   String @id @default(cuid())
  name String @unique
  ads  Ad[]
}

model Rating {
  id        String   @id @default(cuid())
  stars     Int
  comment   String?
  approved  Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  adId      String
  ad        Ad       @relation(fields: [adId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, adId])
}

model Payment {
  id              String         @id @default(cuid())
  stripeSessionId String         @unique
  status          PaymentStatus
  adId            String
  ad              Ad             @relation(fields: [adId], references: [id], onDelete: Cascade)
  createdAt       DateTime       @default(now())
}

enum Role {
  USER
  ADVERTISER
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}
